        renderTotalSummary();
        return;
    }

    // WICHTIG: Auch ohne Laden erlaubt!
    // Wenn kein Laden gew√§hlt: Zeige generische Liste + Hinweis
    const storeHint = !selectedStore
        ? '<div style="background:#fef3c7;padding:12px;border-radius:8px;margin-bottom:16px;"><strong>üí° Tipp:</strong> W√§hle einen Laden f√ºr Preise & Verf√ºgbarkeit oder f√ºhre eine allgemeine Liste.</div>'
        : '';

    container.innerHTML = storeHint + shoppingList.map((item, i) => {
        const matched = item.matched;
        const matchedClass = matched ? 'matched' : '';
        const isExpanded = item._expanded || false;

        // Wenn kein Laden gew√§hlt: Pr√ºfe Verf√ºgbarkeit
        let availabilityWarning = '';
        if (!selectedStore && matched && matched.store_name) {
            availabilityWarning = `<div style="font-size:11px;color:#f59e0b;margin-top:4px;">‚ö†Ô∏è Nur bei: ${matched.store_name}</div>`;
